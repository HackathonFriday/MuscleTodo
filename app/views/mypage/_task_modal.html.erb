<div class="task_modal">
    <div class="background">
        <div class="task_contents">
            <p class="title">
                タスク登録
            </p>
            <div class="input">
                <div class="input_area">
                    <%= form_with model:@tasks_modal, url:mypage_show_path(@tasks_modal), local: true do |f| %>
                    <div class="input_parts">
                        <%= f.label :title, 'タイトル', class:'input_label' %>
                        <%= f.text_field :title, class:'input_form' %>
                    </div>
                    <div class="input_parts">
                        <div class="category_label">
                            <%= f.label :category_id, 'カテゴリ', class:'input_label' %>
                            <a href="" class="create_category">カテゴリ追加</a>
                        </div>
                        <div class="category">
                            <%= f.collection_select(:category_id, @categories, :id, :name, {}, {class:'input_select'}) %>
                        </div>
                    </div>
                    <div class="input_parts">
                        <%= f.label :note, '内容', class:'input_label' %>
                        <%= f.text_area :note, class:'input_form', rows: 10 %>
                    </div>
                    <div class="input_expire">
                        <%= f.label :expire_date, '期日', class:'input_label' %>
                        <div class="submit_area">
                            <%= f.date_field :expire_date, class:'input_limit' %>
                            <%= f.submit '登録する', class:'input_submit' %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>