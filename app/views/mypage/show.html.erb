<%= stylesheet_link_tag "mypage/show", :media => "all" %>
<header>
	<div class="header">
		<div class="header_logo">
			ここにロゴ
		</div>
		<div class="user">
			<div class="user_name">テスト太郎</div>
			<div class="user_level">Lv.54</div>
			<%# TODO exp周りの値を動的にする %>
			<div id="exp_container" data-exp="70" data-overflow="20"></div>
		</div>
	</div>
</header>
<div class="body">
	<section class="graph">
		<%= render partial: 'chart' %>
	</section>
	<section class="task_tab">
		<div class="task_list">
			<div class="button_area">
				<div class="done_not">
					未完了
				</div>
				<div class="done">
					完了済
				</div>
			</div>
			<div class="not_done_task">
				<%= @no_complete_task_list.each do |n| %>
				<div class="task_info">
					<div class="task_detail">
						<p><%= n[:title]%> | <%= n[:category_id]%></p>
						<div class="comment">
							<p>内容：</p>
							<p><%= n[:note]%></p>
						</div>
					</div>
					<div class="second_info">
						<p class="limit">期日：</p><p class="limit_date"><%= n[:expire_date]%></p>
						<button>完了にする</button>
					</div>
				</div>

			<div class="done_task">
				<%= @complete_task_list.each do |c| %>
				<div class="task_info">
					<div class="task_detail">
						<p><%= c[:title]%> | <%= c[:category_id]%></p>
						<div class="comment">
							<p>内容：</p>
							<p><%= c[:note]%></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
<%= render partial: 'macho_modal', macho_modal: @macho_modal %>
<%= render partial: 'task_modal', task_modal: @task_modal, user_id: @user_id %>
