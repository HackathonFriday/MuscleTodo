<div id="root">
	<div class="box">
		<div class="welcome_word">
			<h1>ようこそ、マッスルToDoへ！</h1>
		</div>
		<div class="field">
			<div class="user_info">
				<%= form_for(@user, url: home_index_path(@user)) do |f| %>
					<div class="user_name_label"><%= f.label :name, "ユーザー名" %></div>
					<div class="user_name_field"><%= f.text_field :name %></div>
					<div class="user_name_field"><%= f.hidden_field :token, :value => "hogehoge" %></div>
					<div class="gender_label"><%= f.label :gender, "性別" %></div>
					<div class="radio_button">
						<label class="gender_button"><%= f.radio_button :gender, 1 %>男性</label>
						<label class="gender_button"><%= f.radio_button :gender, 2 %>女性</label>
						<label class="gender_button"><%= f.radio_button :gender, 3 %>その他</label>
					</div>
					<div class="register"><%= f.submit "登録する" %></div>
				<% end %>
			</div>
		</div>
	</div>
</div>